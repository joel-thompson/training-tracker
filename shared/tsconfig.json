{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true, // ADD: For importing JSON files
    "isolatedModules": true // ADD: Required for Bun/Vite
  },
  "include": ["src/**/*"]
}
